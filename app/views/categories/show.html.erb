<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4 mb-4">
    <%= link_to 'Edit', edit_category_path(@category), class:"btn btn-outline-primary" %>
    <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
  </div>
<% end %>
<div class="digg_pagination">
  <%= will_paginate @category_articles, :container => false %>
</div>
<%=render 'articles/article', obj: @category_articles%>
<div class="digg_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>
