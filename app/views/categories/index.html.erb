<h1 class="text-center mt-4">Categories</h1>
<div class="digg_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h3 class="card-title"><%= link_to category.name, category_path(category), class:"card-title"%></h3>
          </div>
          <small> <%= pluralize(category.articles.count, "article") %></small>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(category.created_at) %> ago,
              Edited <%= time_ago_in_words(category.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="digg_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>
