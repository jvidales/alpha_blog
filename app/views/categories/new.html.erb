<h1 class="text-center mt-4">Create New Category</h1>
<div class="container bg-white p-5 shadow rounded">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, local: true) do |f| %>
        <div class="form-group">
          <label for="nameField"><%= f.label :name, "Category Name"%></label>
          <%= f.text_field :name, class: "form-control shadow rounded", id: "nameField", placeholder: "Enter Category Name" %>
        </div>
        <%= f.submit class: "btn btn-orange text-white float-right ml-2" %>
        <%=link_to 'Cancel', articles_path, class: "btn btn-danger float-right text-white"%>
      <% end %>
    </div>
  </div>
</div>
