<h1 class="text-center mt-4">Login</h1>
<div class="container bg-white p-5 shadow rounded">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <%= form_with(scope: :session, url:login_path) do |f| %>
        <div class="form-group">
          <label for="emailField"><%= f.label :email %></label>
          <%= f.email_field :email, class: "form-control shadow rounded", id: "emailField", placeholder: "Enter Email Address" %>
        </div>
        <div class="form-group">
          <label for="passwordField"><%= f.label :password %></label>
          <%= f.password_field :password, class: "form-control shadow rounded", id: "passwordField", placeholder: "Enter Password" %>
        </div>
        <%= f.submit "Log In", class: "btn btn-orange text-white float-right ml-2" %>
        <%=link_to 'Cancel', root_path, class: "btn btn-danger float-right text-white"%>
      <% end %>
    </div>
  </div>
</div>
