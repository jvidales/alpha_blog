<div class="container bg-white p-5 shadow rounded">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title%>
          <%= f.text_field :title, class: "form-control shadow rounded", id: "titleField", placeholder: "Enter Title" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control shadow rounded", id: "descriptionArea", placeholder: "Enter Description", rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label "Select Categories" %><br />
          <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Choose Options" }, {multiple: true, 
                                size: 5, class: "custom-select shadow rounded"})%>
        </div>
        <%= f.submit class: "btn btn-orange text-white float-right ml-2"%>
        <%=link_to 'Cancel', articles_path, class: "float-right btn btn-danger text-white"%>
      <% end %>
    </div>
  </div>
</div>
