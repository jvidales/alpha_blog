<div class="container bg-white p-5 shadow rounded">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @user%>
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group">
          <label for="usernameField"><%= f.label :username%></label>
          <%= f.text_field :username, class: "form-control shadow rounded", id: "usernameField", placeholder: "Enter Username" %>
        </div>
        <div class="form-group">
          <label for="emailField"><%= f.label :email %></label>
          <%= f.email_field :email, class: "form-control shadow rounded", id: "emailField", placeholder: "Enter Email Address" %>
        </div>
        <div class="form-group">
          <label for="passwordField"><%= f.label :password %></label>
          <%= f.password_field :password, class: "form-control shadow rounded", id: "passwordField", placeholder: "Enter Password" %>
        </div>
        <%= f.submit 'Create Account', class: "btn btn-orange text-white float-right ml-2"%>
        <%=link_to 'Cancel', articles_path, class: "btn btn-danger float-right text-white"%>
      <% end %>
    </div>
  </div>
</div>
